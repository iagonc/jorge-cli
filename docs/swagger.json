            "type": "object",
            "properties": {
                "errorCode": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "handler.Resource": {
            "type": "object",
            "properties": {
                "dns": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "handler.SuccessResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "$ref": "#/definitions/handler.Resource"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "schemas.Resource": {
            "type": "object"
        }
    }
}